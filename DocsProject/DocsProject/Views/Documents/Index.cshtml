@model IEnumerable<DocsProject.Models.Documents>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col">
                <h1>Painel</h1>
            </div>
        </div>
    </div>
</div>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Processo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                Arquivo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.Codigo)
                </th>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.Processo)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td style="vertical-align:middle;">
                    <a class="btn text-white h-auto" style="background-color: #9370DB;" asp-action="Create">@Html.DisplayFor(modelItem => item.Nome_Arquivo)</a>
                    <button class="navbar-toggler" type="button" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                   
                </td>
                <td style="vertical-align:middle;">
                    <a asp-action="Edit" asp-route-id="@item.Codigo">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Codigo">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Codigo">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
